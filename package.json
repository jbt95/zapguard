{
  "name": "zapguard",
  "version": "1.1.0",
  "description": "A circuit breaker implementation for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./adapters/*": {
      "import": "./dist/adapters/*.js",
      "require": "./dist/adapters/*.js",
      "types": "./dist/adapters/*.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "format:check": "biome format",
    "test:coverage": "vitest run --coverage",
    "test": "vitest run",
    "format:fix": "biome format --write",
    "bundle": "tsup",
    "prepack": "yarn test:coverage && yarn build",
		"postpack": "yarn tsc --build --clean",
    "upload": "pnpm run bundle && pnpm publish --no-git-checks --access public"
  },
  "keywords": [],
  "author": "jbt95 <jordi.dev95@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250604.0",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^1.6.0",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}
